                  </div>
                </div><!--upper text block -->
                <div class="relative text-center">
                  <div class="lg2-number lg:xl-number number-mask">{{ params.items[1].number }}</div>
                  <div class="absolute left-1/2 top-1/2 translate-center h5 lg:h4 title w-4/5 lg:w-auto">{{ params.items[1].title2 }}</div>
                </div><!-- lover text block -->
