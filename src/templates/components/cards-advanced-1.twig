{#
  Card List Advanced - Version 1

  @param {string} suptitle
  @param {string} title 
  @param {object} cta
  {
      @param {string} title
      @param {string} url
  }
  @param {array}  items -cards 
  {
    @param {string} image
    @param {string} url
    @param {string} title 
    @param {array} tags {
        @param {string} title 
        @param {string} url
    }
    @param {string} date
    @param {string} author
    @param {string} author_url
  }
#}
<section class="c-cards-advanced c-cards-advanced-1">
    {% if params.title or params.cta %}
    <div class="container-only-lg">
        <div class="flex flex-wrap -mx-5 lg:items-end lg:mb-11">
            <div class="col-12 xl:offset-1 xl:col-4">
                <div class="lg:h6 title text-peppermint lg:mb2">{{ params.suptitle }}</div>
                <h2 class="lg:h2 title text-coalblack">{{ params.title }}</h2>
            </div>
            <div class="col-12 xl:offset-2 xl:col-4">
                {% if params.cta %}
                <div class="relative lg:text-right">
                    <a href="{{ params.cta.url }}" class="block lg:inline-block button button-full medium-button w-full lg:w-auto">{{ params.cta.title }}</a>
                    
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
    <div class="container-wider">
        <div class="flex flex-wrap -mx-5">
            {% for item in params.items %}
                <div class="w-full lg:px-2 {{ loop.last ? "lg:w-1/2" : "lg:w-1/4"}}">
                    <div class="tags lg:mb-2 flex items-center">
                        {% for tag in item.tags %}
                            <a href="{{ tag.url }}" class="arboria-main-button text-peppermint">{{ tag.title }}</a>
                            {% if not loop.last %}
                                <div class="mx-3 h-3 bg-arcticsilver" style="width:2px;"></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <a class="block relative  w-full lg:h-60 xl:h-85" href="{{ item.url}}">
                        <img src="{{ item.image }}" class="absolute left-0 top-0 object-cover w-full h-full" alt="">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>