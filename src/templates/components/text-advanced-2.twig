{#

Section with advanced text. Version 2
left side: text with cta 
middle: items (numbers, and captions)
right: image with some background element

@param {string}  title
@param {object}  cta 
{
  @param {string} title
  @param {string} url
}
@param {string} image
@param {string} image_mobile
@param {array} items 
{
    @param {string} suptitle
    @param {string} title
    @param {string} caption
}

Example:

    {% 
      set textAdvancedItems = {
        "title" : "Our experience",
        "items" : [
          {
            "title" : "100.000.000",
            "suptitle" : "Več kot",
            "caption" : "evrov vloženih sredstev strank"
          },
          {
            "title" : "20.000",
            "suptitle" : "Več kot",
            "caption" : "strank"
          },
          {
            "title" : "17%",
            "suptitle" : "Več kot",
            "caption" : "donosnost"
          }
        ],
        "cta" : {
          "title" : "Naročite svetovalca",
          "url" : "#",
        },
        "image" : "assets/images/mansuit2.png",
        "image_mobile" : "assets/images/mansuit2.png",
      } 
    %}
    
#}

{# Output #}
<section class="c-text-advanced c-text-advanced-2">
	<div class="container-only-lg">
		<div class="flex flex-wrap -mx-5 lg:mt-45">
			<div class="col-12 lg:col-3 xl:col-3 xl:offset-1">
				<h2 class="h4 lg:h5 xl:h4 title text-coalblack mb-6 lg:mb-4">{{ params.title }}</h2>
				<div class="mb-11 lg:mb-0">
					<a href="{{ params.cta.url }}" class="button button-full medium-button w-full lg:w-auto">{{ params.cta.title }}</a>
				</div>
			</div>
			<div class="lg:col-3 xl:col-3 relative">
				<div style="width:336px; height: 594px; margin-top:-160px;" class="hidden lg:block relative">
					<img src="{{ manifest('assets/images/pattern-6.svg') }}" style="width:184px;" class="h-auto absolute -top-5 -right-8" alt="">
					<img loading="lazy" src="{{ params.image }}" class="absolute top-0 left-0 object-cover w-full h-full" alt="">
				</div>
				<div class="relative lg:hidden h-0 w-screen -mx-5" style="padding-bottom:125%; margin-top:52px;">
					<img src="{{ manifest('assets/images/pattern-6.svg') }}" style="width:184px; top:-52px;" class="h-auto absolute right-0" alt="">
					<img loading="lazy" src="{{ params.image_mobile is defined ? params.image_mobile : params.image }}" class="absolute top-0 left-0 object-cover w-full h-full" alt="">
				</div>
			</div>
			<div class="col-12 lg:col-4 xl:col-4 lg:offset-2 xl:offset-1 bg-coalblack lg:bg-transparent relative">
				<div class="lg:block absolute top-1 bottom-0 bg-coalblack" style="left:calc(-428px + 74px); right:-288px; z-index:-1;"></div>
				<ul class="pb-10 pt-8 lg:pb-20 lg:pt-26">
					{% for item in params.items %}
						<li class="mb-6 lg:mb-10 pl-9 lg:pl-10 relative">
							<div class="small-tag lg:big-tag text-white mb-1 lg:mb-0">{{ item.suptitle }}</div>
							<h5 class="h4 lg:h3 title text-white mb-0 lg:mb-0">{{ item.title }}</h5>
							<p class="small-paragraph text-white">{{ item.caption }}</p>
							<div class="absolute left-0 w-4 h-4 border-2 border-solid border-peppermint" style="border-radius:50%; top:calc(50% - 8px);"></div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</section>
