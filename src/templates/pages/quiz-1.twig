{% block content %}
	<div class="px-5 relative lg:absolute top-8 lg:top-34 left-0 w-full" style="z-index:1000;">
		<div class="flex flex-wrap -mx-5 items-center">
			<div class="flex items-center justify-between w-full px-5">
				<svg onclick="prevButton_quiz1();" class="inline-block mr-0 lg:mr-6 cursor-pointer" width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M14.293 5.293l1.414 1.414L10.414 12l5.293 5.293-1.414 1.414L7.586 12l6.707-6.707z" fill="white"/>
