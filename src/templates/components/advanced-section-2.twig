{#
Advanced section version 2

@param {string}  title
@param {string}  description
@param {string}  image
@param {string}  image_mobile 
@param {object}  cta
{
    @param {string}  title
    @param {string}  url
}

Example: 

{% set advancedSectionItems = {
	"title": "Meseƒçne smernice",
	"description": "We examine the risk and cost ratio of every potential investment you are interested in and advise on its viability and worth.",
	"cta" : {
		"title" : "Spoznajte zdaj",
		"url" : "#"
	},
	"image" : "assets/images/office-empty-2.png",
	"image_mobile" : "assets/images/office-empty-2-mobile.png",
} %}

