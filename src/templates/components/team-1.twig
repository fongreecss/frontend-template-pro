{# Output #}
{% if params.items %}
	<section class="c-slider">
		<div class="container-only-lg">
			<div class="flex flex-wrap -mx-5">
				<div class="col-12 xl:offset-1 xl:col-11">
					<h2 class="h4 lg:h1 title text-coalblack mb-8 lg:mb-10">{{ params.title }}</h2>
				</div>
			</div>
			<div class="flex flex-wrap -mx-5 lg:mb-16">
				{% for item in params.items %}
					<div class="w-full px-10 lg:px-5 lg:w-1/5">
						<div class="mb-4 w-full h-0 pb-full relative">
							<img src="{{ manifest('assets/images/pattern-6.svg') }}" class="absolute -z-1" style="width:60%; top:23%; left:20%;" alt="">
							<img class="absolute top-0 left-0 object-cover w-full h-full" src="{{ item.image }}">
						</div>
						<div class="h5 title text-coalblack -mx-5 lg:mx-0 text-center mb-8 lg:mb-0">{{ item.title }}</div>
					</div>
				{% endfor %}
			</div>
			<div class="flex flex-wrap -mx-5">
				<div class="col-12">
					{% if params.cta %}
						<div class="relative text-center">
							<a href="{{ params.cta.url }}" class="block lg:inline-block button button-full medium-button w-full lg:w-auto">{{ params.cta.title }}</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endif %}
