                    <div class="relative">
						<a href="{{ params.result.cta.url }}" class="button button-full medium-button w-full lg:w-auto mb-4 lg:mb-0">{{ params.result.cta.title }}</a>
                    </div>
					{% endif %}
                </div>
                
            </div>
		</div>
	</div>
