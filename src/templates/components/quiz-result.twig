						<button onClick="redoButton_quiz1();" class="button button-empty medium-button w-full lg:w-auto mb-4 lg:mb-0">{{ params.cta.title }}</button>
					{% endif %}
					{% if params.cta2 %}
						<a href="#" class="button button-full medium-button w-full lg:w-auto">{{ params.cta2.title }}</a>
