{#
  Section with text and image aside. Version 4

  We have to extact styles in the css for the layout, so the html in
  the content can be naked.

  @param {string}  title
  @param {wysiwyg} description
  @param {object}  cta 
  {
    @param {string} title
    @param {string} url
  }
  @param {string} image     image url
  @param {string} image_first       default set on false
#}

{# Output #}
<section class="c-image-aside c-image-aside-4 container-only-lg">
  <div class="row flex items-center">
    <div class="col-12 lg:col-6 xl:col-5 xl:offset-1 order-0 {{ params.image_first == true ? 'lg:order-1' : 'lg:order-0'}}">
      {% if params.title %}
      <h2 class="h4 lg:h2 title mb-3 lg:mb-6">{{ params.title }}</h2>
      {% endif %}
      {% if params.description %}
      <div class="small-paragraph lg:medium-paragraph mb-8 lg:mb-6 mw-none-mobile" style="max-width:408px;">{{ params.description|raw }}</div>
      {% endif %}
      {% if params.cta %}
      <div class="mb-6 lg:mb-0">
        <a href="{{ params.cta.url }}" class="button button-full medium-button w-full lg:w-auto">{{ params.cta.title }}</a>
      </div>
      {% endif %}
    </div>
     <div class="col-12 lg:col-6 order-1 {{ params.image_first == true ? 'lg:order-0' : 'lg:order-1'}}">
      {% if params.image %}
        <div class="bg-image relative bg-no-repeat bg-center -mx-5 lg:mx-0" style="{{ params.image ? "background-image: url(" ~ params.image ~ ");" : "" }}">
            {% if params.textItem2 %}
            <div class="text-item text-item-1 h4 lg:h2 title text-peppermint pt-13 mb-38 lg:mb-38 lg:pt-22">{{ params.textItem1}}</div>
            {% endif %}
            {% if params.textItem2 %}
            <div class="text-item text-item-2 h4 lg:h2 title text-peppermint mb-48 lg:mb-44">{{ params.textItem2}}</div>
            {% endif %}
            {% if params.textItem2 %}
            <div class="text-item text-item-3 h4 lg:h2 title text-peppermint pb-12 lg:pb-22">{{ params.textItem3}}</div>
            {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>